{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-m32", // 32 位的程序
                "-g",
                "-I${workspaceFolder}/src/include",
                "-I/usr/include/i386-linux-gnu",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "nasm: gcc build active file",
            "command": "",
            "args": [
                "/usr/bin/nasm",
                "-f",
                "elf32",
                "-gdwarf",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                ";",
                "/usr/bin/gcc",
                "-fdiagnostics-color=always",
                "-m32", // 32 位的程序
                "-g",
                "-static",
                "-I${workspaceFolder}/src/include",
                "-I/usr/include/i386-linux-gnu",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}